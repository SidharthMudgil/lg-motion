<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Lgmotion" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/base_theme_dark_primary</item>
        <item name="colorOnPrimary">@color/base_theme_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/base_theme_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/base_theme_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/base_theme_dark_secondary</item>
        <item name="colorOnSecondary">@color/base_theme_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/base_theme_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/base_theme_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/base_theme_dark_tertiary</item>
        <item name="colorOnTertiary">@color/base_theme_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/base_theme_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/base_theme_dark_onTertiaryContainer</item>
        <item name="colorError">@color/base_theme_dark_error</item>
        <item name="colorErrorContainer">@color/base_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/base_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/base_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/base_theme_dark_background</item>
        <item name="colorOnBackground">@color/base_theme_dark_onBackground</item>
        <item name="colorSurface">@color/base_theme_dark_surface</item>
        <item name="colorOnSurface">@color/base_theme_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/base_theme_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/base_theme_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/base_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/base_theme_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/base_theme_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/base_theme_dark_inversePrimary</item>
        <item name="android:statusBarColor">@color/base_theme_dark_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- for BottomSheet & SideSheet Dialog -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="sideSheetDialogTheme">@style/ThemeOverlay.App.SideSheetDialog</item>
    </style>

    <style name="Theme.Lgmotion" parent="Base.Theme.Lgmotion">
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/base_theme_dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_face</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/base_theme_dark_background</item>
        <item name="windowSplashScreenBackground">@color/base_theme_dark_background</item>
        <item name="postSplashScreenTheme">@style/Theme.Lgmotion</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="android:layout_margin">30dp</item>
        <item name="actionTextColorAlpha">1</item>
        <item name="shapeAppearance">@style/ShapeOverlayRoundedImageView</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackThickness">20dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorOnSurface">@color/base_theme_dark_primary</item>
        <item name="dialogCornerRadius">15dp</item>
        <item name="backgroundTint">@color/base_theme_dark_surface</item>
        <item name="android:background">@color/base_theme_dark_surface</item>
    </style>

    <style name="ConnectedStatusCardStyle">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardBackgroundColor">@color/green_onContainer</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ConnectedTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/green_container</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="DisconnectedStatusCardStyle">
        <item name="cardCornerRadius">15dp</item>
        <item name="cardBackgroundColor">@color/base_theme_dark_errorContainer</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="DisconnectedTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/base_theme_dark_onErrorContainer</item>
        <item name="android:textFontWeight">700</item>
    </style>
</resources>